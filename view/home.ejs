<%- include('includes/header') %>
<main>
  <div id="main-wrapper" class="flex flex-wrap justify-center w-11/12 mx-auto">
    <section class="w-full lg:w-1/2 p-2">
      <%- include('includes/itemsSection') %>
    </section>
    <section class="w-full lg:w-1/2 p-2">
      <div class="lg:w-1/2 lg:float-left border border-gray-400 rounded">
        <!-- VIEWER CONTAINER -->
        <ol
          id="viewer"
          class="list-decimal bg-white rounded px-6 py-2"
          style="min-height: 5rem;"
        ></ol>
        <input
          class="w-full bg-white mt-3 p-2 rounded shadow-inner"
          type="text"
          id="title-before-save"
          placeholder="Title...optional"
        />
        <button
          id="submit-btn"
          class="bg-green-600 hover:bg-green-800 rounded text-white px-2 mt-1 float-right"
        >
          Save
        </button>
      </div>
    </section>
  </div>
  <!-- SHOPPING LIST -->
  <section class="p-2">
    <%- include('includes/shoppingList') %>
  </section>
</main>

