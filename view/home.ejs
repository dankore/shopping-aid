<%- include('includes/header') %>
<main>
<div id="main-wrapper" class="flex flex-wrap justify-center w-11/12 mx-auto">
  <section class="w-full lg:w-1/2 p-2">
    <%- include('includes/itemsSection') %>
  </section>
  <section class="w-full lg:w-1/2 p-2">
    <div class="lg:w-1/2 lg:float-left">
      <!-- VIEWER CONTAINER -->
      <ol
        id="viewer"
        class="list-decimal bg-white rounded px-6 py-2"
        style="min-height: 5rem;"
      ></ol>
      <label for="title-before-save">Title: <span class="mt-3 inline-block italic">Optional</span><label>
      <input class="w-full bg-white p-2 rounded" type="text" id="title-before-save" >
