<%- include('includes/header') %>
<main
  id="main-wrapper"
  class="grid grid-cols-1 sm:grid-cols-2 gap-4 w-full sm:max-w-3xl text-2xl sm:text-base mx-auto p-4 sm:pt-20"
>
  <section class="">
    <%- include('includes/itemsSection') %>
  </section>
  <!-- VIEWER CONTAINER -->
  <div>
    <section>
      <div class="rounded">
        <div
          class="flex justify-between text-gray-800 text-sm py-2 font-medium leading-4 tracking-wider"
        >
          <h2>
            B. View & Save
          </h2>
          <button id="copy-text-btn" class="hover:text-gray-600">Copy</button>
        </div>

        <ol
          id="viewer"
          class="list-decimal background-color rounded-tr rounded-tl px-2 py-2"
          style="min-height: 8rem;"
        >
          <div class="text-center text-gray-400">
            <div class="text-2xl">Empty</div>
            <div>Selected items appear here</div>
          </div>
        </ol>
        <textarea
          id="text-area-for-copy"
          class="mt-4 absolute modal"
        ></textarea>
        <input
          class="w-full bg-white mt-3 shadow-inner focus:outline-0 border border-transparent py-2 pr-4 pl-10 block appearance-none leading-normal"
          type="text"
          id="title-before-save"
          placeholder="Title...optional"
        />
        <div class="flex justify-between">
          <button
            disabled
            id="btn-save-shopping-list-with-password"
            class="flex justify-between items-center bg-purple-600 preventAutoZoom hover:bg-purple-800 px-3 rounded-br rounded-bl text-white py-2"
          >
            <img class="goThruThisElemForEvents" src="/static/lock.svg" />
            <span class="inline-block ml-2">Save with Password</span>
          </button>
          <button
            id="submit-btn"
            class="bg-green-600 preventAutoZoom hover:bg-green-800 px-6 rounded-br rounded-bl text-white py-2"
          >
            Save
          </button>
        </div>
      </div>
    </section>
    <!-- SHOPPING LIST -->
    <section id="shopping-list-section" class="mt-3">
      <%- include('includes/shoppingList') %>
    </section>
  </div>
</main>

<!-- HIDDEN BY DEFAULT -->
<%- include("includes/categoriesChoiceDuringAdd") %> <%-
include("includes/protectWithPasswordModal") %>
