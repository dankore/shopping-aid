<%- include('includes/header') %>
<main
  id="main-wrapper"
  class="grid grid-cols-1 sm:grid-cols-2 gap-4 w-full sm:max-w-3xl text-2xl sm:text-base mx-auto p-4 sm:pt-20"
>
  <section class="">
    <%- include('includes/itemsSection') %>
  </section>
  <!-- VIEWER CONTAINER -->
  <div>
    <section>
      <div class="rounded">
        <div
          class="flex justify-between text-gray-800 text-sm py-2 font-medium leading-4 tracking-wider"
        >
          <h2>
            B. View & Save
          </h2>
          <button id="copy-text-btn" class="hover:text-gray-600">Copy</button>
        </div>

        <ol
          id="viewer"
          class="list-decimal bg-white rounded-tr rounded-tl px-2 py-2"
          style="min-height: 8rem;"
        >
            <div class="text-center text-gray-400"><div class="text-2xl">Empty</div><div>Selected items appears here</div></div>
        </ol>
        <textarea
          id="text-area-for-copy"
          class="mt-4 absolute modal"
        ></textarea>
        <input
          class="w-full bg-white mt-3 p-2 shadow-inner"
          type="text"
          id="title-before-save"
          placeholder="Title...optional"
        />
        <button
          id="submit-btn"
          class="bg-green-600 w-full preventAutoZoom hover:bg-green-800 rounded-br rounded-bl text-white py-2"
        >
          Save
        </button>
      </div>
    </section>
    <!-- SHOPPING LIST -->
    <section id="shopping-list-section" class="mt-3">
      <%- include('includes/shoppingList') %>
    </section>
  </div>
</main>

<%- include("includes/categoriesChoiceDuringAdd") %>
<!-- HIDDEN BY DEFAULT -->
<%- include('includes/footer') %>
