<%- include('includes/header') %>
<section
  id="main-wrapper"
  class="w-full mt-10 sm:mx-auto sm:max-w-lg flex justify-center flex-wrap text-lg"
>
  <div id="category-wrapper" class="w-full">
    <h2
      id="category-title"
      class="p-2 cursor-pointer rounded-tr rounded-tl shadow-2xl text-white bg-gray-800 text-lg"
    >
      FRUITS
    </h2>
    <div
      class="p-4 rounded-br rounded-bl bg-white"
      id="checkboxes-wrapper-fruits"
      style="display: none;"
    >
      <% fruits.forEach(item => { %>
      <div class="flex justify-between">
        <label class="cursor-pointer" for="<%= item[1] %>">
          <input
            class="cursor-pointer checkbox-select-item"
            type="checkbox"
            id="<%= item[1] %>"
            value="<%= item[1] %>"
          />
          <%= item[1] %>
        </label>
        <button id="delete-item" data-cat="Fruits" data-id="<%= item[0] %>" data-item="<%= item[1] %>" class="text-red-600">X</button>
      </div>
      <% }) %>
      <!-- BUG: THIS DIV NEEDS BE HERE OTHERWISE CONTAINER WONT OPEN -->
      <div class="cursor-pointer checkbox-select-item"></div>
    </div>
  </div>
  <div id="category-wrapper" class="my-2 w-full">
    <h2
      id="category-title"
      class="p-2 cursor-pointer rounded-tr rounded-tl shadow-2xl text-white bg-gray-800 text-lg"
    >
      VEGETABLES
    </h2>
    <div
      class="p-4 rounded-br rounded-bl bg-white"
      id="checkboxes-wrapper-veg"
      style="display: none;"
    >
      <% veg.forEach(item => { %>
      <div class="flex justify-between">
        <label class="cursor-pointer" for="<%= item[1] %>">
          <input
            class="cursor-pointer checkbox-select-item"
            type="checkbox"
            id="<%= item[1] %>"
            value="<%= item[1] %>"
          />
          <%= item[1] %>
        </label>
         <button id="delete-item" data-cat="Vegetables" data-id="<%= item[0] %>" data-item="<%= item[1] %>" class="text-red-600">X</button>
      </div>
      <% }) %>
      <!-- BUG: THIS DIV NEEDS BE HERE OTHERWISE CONTAINER WONT OPEN -->
      <div class="cursor-pointer checkbox-select-item"></div>
    </div>
  </div>
  <button id="submit-btn">Submit</button>
</section>
<section class="mt-10">
  <%- include("includes/newItem") %>
</section>
<%- include('includes/footer') %>
