<%- include('includes/header') %>
<section
  id="main-wrapper"
  class="mx-4 mt-10 mx-auto max-w-md flex justify-center flex-wrap"
>
  <div id="card" class="m-2 w-full">
    <h2
      id="category-title"
      class="p-2 cursor-pointer rounded-tr rounded-tl shadow-2xl text-white bg-gray-800 text-lg"
    >
      FRUITS
    </h2>
    <div
      class="p-4 rounded-br rounded-bl bg-white"
      id="checkboxes-wrapper"
      style="display: none;"
    >
      <label class="cursor-pointer" for="orange">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="orange"
          value="orange"
        />
        Orange </label
      ><br />
      <label class="cursor-pointer" for="apple">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="apple"
          value="Apple"
        />
        Apple </label
      ><br />
      <label class="cursor-pointer" for="pear">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="pear"
          value="Pear"
        />
        Pear </label
      ><br />
      <label class="cursor-pointer" for="tangerine">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="tangerine"
          value="Tangerine"
        />
        Tangerine </label
      ><br />
      <label class="cursor-pointer" for="lemon">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="lemon"
          value="Lemon"
        />
        Lemon </label
      ><br />
      <label class="cursor-pointer" for="citrus">
        <input
          class="cursor-pointer checkbox-select-item"
          type="checkbox"
          id="citrus"
          value="Citrus"
        />
        Citrus </label
      ><br />
    </div>
    <button id="submit-btn">Submit</button>
  </div>
</section>
<section class="mt-10">
  <%- include("includes/newItem") %>
</section>
<%- include('includes/footer') %>
